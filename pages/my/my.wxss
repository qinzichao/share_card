
.userinfo {
  width: 95%;
  background-color: #fff;
  margin: 20rpx;
  color: black;
}

.userinfo-lable {
  margin-right: 20rpx;
  font-size: 30rpx;
}

.userinfo-row {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 60rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
}

.userinfo-header {
  display: flex;
  flex-direction: row;
  padding-left: 30rpx;
  align-items: flex-end;
  margin: 20rpx 0rpx;
}

.userinfo-name {
  display: flex;
  flex-direction: column;
  width: 500rpx;
  padding-bottom: 30rpx;
}

.avatar {
  margin-top: 20rpx;
  width: 128rpx;
  height: 128rpx;
  border-radius: 10%;
}

.nickname {
  font-size: 50rpx;
  margin-right: 20rpx;
  /*me*/

  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.job {
  font-size: 28rpx;

  margin-right: 20rpx;
  margin-top: 10rpx;
  /*me*/

  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.mobile {
  font-weight: bold;
}


.handle-row {
  width: calc(100% - 2px);
  background-color: #fff;
  display: flex;
  flex-direction: row;
  margin: 30rpx 0rpx;
  align-items: center;
  height: 140rpx;
  font-size: 25rpx;
}

.handle-col-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33%;
  margin: 20rpx 0rpx;
  border-right: 1rpx solid #eee;
}

.col-info-view {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.more-row {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  height: 155rpx;
  font-size: 30rpx;
  padding: 15rpx;
}

.more-row-lable {
  margin-left: 25rpx;
  margin-right: 20rpx;
  width: 100rpx;
  
}

.more-row-info {
  width: calc(100% - 120rpx);
}

.button-row {
  width: 100%;

  margin-top: 20rpx;
}

.button-row button {
  width: 95%;
  margin-bottom: 20rpx;
}

.bottom-txt {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bottom-txt-info {
  font-size: 24rpx;
  margin-bottom: 5px;
  color: #cdcdcd;
  
}
.bottom-txt-a {
  font-size: 28rpx;
  color: #85838b;
  margin-top: 5px;
}